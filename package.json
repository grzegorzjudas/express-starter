{
    "name": "express-starter",
    "version": "1.2.0",
    "description": "Express starter app",
    "main": "index.js",
    "scripts": {
        "build": "npm run clean && tsc -p . && cp src/robots.txt dist/",
        "clean": "rm -rf dist",
        "db:migrate": "npm run build && knex migrate:latest -- --envfile env-local.env",
        "db:rollback": "npm run build && knex migrate:rollback -- --envfile env-local.env",
        "db:seed": "npm run build && knex seed:run -- --envfile env-local.env",
        "dev": "nodemon -e ts,json --exec \"npm run build && npm start\"",
        "docker:build": "npm run build && npm run package && docker image build -t grzegorzjudas/express-starter:latest .",
        "docker:push": "docker image push grzegorzjudas/express-starter:latest",
        "lint": "eslint 'src/**/*.{js,ts}'",
        "package": "cd dist && tar --exclude='*.map' -zcf ../artifact.tar.gz . && cd ..",
        "start": "node -r dotenv/config --enable-source-maps dist/index.js dotenv_config_path=env-local.env",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/grzegorzjudas/express-starter.git"
    },
    "keywords": [
        "express",
        "starter",
        "api"
    ],
    "author": "grzegorzjudas",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/grzegorzjudas/express-starter/issues"
    },
    "homepage": "https://github.com/grzegorzjudas/express-starter#readme",
    "dependencies": {
        "@types/joi": "^17.2.3",
        "bcrypt": "^5.0.1",
        "cls-hooked": "^4.2.2",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.5",
        "express": "^4.17.1",
        "http-status-codes": "^2.1.4",
        "jaeger-client": "^3.18.1",
        "joi": "^17.4.2",
        "knex": "^0.21.21",
        "node-fetch": "^2.6.1",
        "objection": "^2.2.15",
        "opentracing": "^0.14.5",
        "pg": "^8.7.1",
        "redis": "^3.1.2",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cls-hooked": "^4.3.3",
        "@types/compression": "^1.7.1",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.13",
        "@types/jaeger-client": "^3.18.2",
        "@types/node": "^16.7.4",
        "@types/node-fetch": "^2.5.12",
        "@types/redis": "^2.8.31",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "dotenv": "^10.0.0",
        "eslint": "^7.32.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-standard": "^5.0.0",
        "nodemon": "^2.0.12",
        "typescript": "^4.4.2"
    }
}
